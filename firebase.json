{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    },
    {
      "source": "shortener/functions",
      "codebase": "shortener"
    },
    {
      "source": "functions/pdf",
      "codebase": "pdf"
    }
  ],
  "hosting": [
    {
      "site": "hofbapp",
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "redirects": [
        {
          "source": "/contact/:vCardFile",
          "destination": "https://storage.googleapis.com/honda-burien.appspot.com/vcards/:vCardFile",
          "type": 302
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "site": "go-hofb-app",
      "public": "public",
      "rewrites": [
        {
          "source": "**",
          "function": "redirectHandler"
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}

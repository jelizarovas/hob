{
  "name": "functions",
  "type": "module",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "build:pdf": "esbuild src/generateAgreementSheetPdf.js --bundle --platform=node --target=node20 --loader:.jsx=jsx --outfile=pdf/generateAgreementSheetPdf.js --external:@sparticuz/chromium --external:puppeteer-core",
    "deploy:pdf": "npm run build:pdf && firebase deploy --only functions:pdf:generateAgreementSheetPdf"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-react": "^7.26.3",
    "@babel/register": "^7.25.9",
    "@sparticuz/chromium": "^133.0.0",
    "cors": "^2.8.5",
    "firebase-admin": "^13.2.0",
    "firebase-functions": "^6.3.2",
    "puppeteer-core": "^24.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.4.0"
  },
  "private": true
}
